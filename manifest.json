{
  "manifest_version": 3,
  "name": "Chroma Palette ðŸŽ¨",
  "version": "1.4",
  "description": "Extract the dominant color palette from the visible area of any webpage and pick specific colors using a screenshot.",
  "author": "Mayank Singh",
  "homepage_url": "https://linktr.ee/bymayanksingh",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
